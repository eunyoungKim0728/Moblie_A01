<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Packing">

        <TextView
            android:id="@+id/packingList"
            style="@style/dayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/packing_list"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="28dp" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            style="@style/itineraryTextView"
            android:text="ã†Yujin" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presto Card"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="136dp" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallet"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="184dp" />
        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toiletries"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="184dp" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="55dp"
            android:text="go to main page"
            android:textSize="10sp" />


    </LinearLayout>
</layout>